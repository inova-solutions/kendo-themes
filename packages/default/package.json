{
  "name": "@progress/kendo-theme-default",
  "description": "SASS resources for the default Kendo UI theme",
  "version": "3.7.0",
  "author": "Progress",
  "license": "Apache-2.0",
  "keywords": [
    "Kendo UI",
    "Theme"
  ],
  "main": "dist/all.css",
  "sass": "scss/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/telerik/kendo-themes.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "buildinova": "node build/build-inova-themes.js",
    "buildinova:debug": "node --nolazy --inspect-brk=9229 build/build-inova-themes.js",
    "lint": "gulp lint",
    "api": "gulp api",
    "api-check": "npm run api && git diff --exit-code --quiet -- docs/ || (echo -e '\\033[0;31mERROR: API docs are out of date' && exit 1)",
    "build": "gulp sass",
    "watch": "gulp sass:watch",
    "embed-assets": "gulp assets",
    "swatches": "gulp swatches",
    "test": "npm run lint && npm run build && npm run api-check",
    "twbs-compat": "kendotheme build --file ./build/twbs-compat.scss",
    "prepublishOnly": "npm run build && npm run swatches"
  },
  "devDependencies": {
    "gulp-eslint": "^5.0.0",
    "clean-css": "^4.2.1",
    "handlebars": "^4.0.10",
    "ncp": "^2.0.0",
    "@progress/kendo-theme-tasks": "^0.1.6",
    "bootstrap": "^4.3.1",
    "gulp": "^4.0.2"
  }
}
